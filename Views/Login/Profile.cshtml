@model ProfileViewModel

<div class="container mt-5">
    <div class="row">

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm border-0 text-center mb-4">
                <div class="card-body">
                    <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                     alt="Profil Fotoƒürafƒ±"
                     class="rounded-circle mx-auto mb-3"
                     style="width: 120px; height: 120px; object-fit: cover;">
                    <h5 class="fw-bold">@Model.UserName</h5>
                    <p class="text-muted small mb-1 fs-6"><i class="bi bi-envelope"></i> @Model.Email</p>
                    <p class="text-muted small fs-6"><i class="bi bi-telephone"></i> @Model.Phone</p>
                    <span class="badge bg-primary ">√úyelik: @Model.CreateTime.ToString("MMM yyyy")</span>
                </div>
            </div>

            <div class="row g-3">
    <div class="col-6">
        <div class="card shadow-sm border-0 text-center p-3 h-100">
            <h6 class="fw-bold">üìÖ @Model.TotalAppointments</h6>
            <small class="text-muted">Toplam</small>
        </div>
    </div>
    <div class="col-6">
        <div class="card shadow-sm border-0 text-center p-3 h-100">
            <h6 class="fw-bold text-success">‚úÖ @Model.Completed</h6>
            <small class="text-muted">Tamamlandƒ±</small>
        </div>
    </div>
    <div class="col-6">
        <div class="card shadow-sm border-0 text-center p-3 h-100">
            <h6 class="fw-bold text-warning">‚è≥ @Model.Pending</h6>
            <small class="text-muted">Bekleyen</small>
        </div>
    </div>
    <div class="col-6">
        <div class="card shadow-sm border-0 text-center p-3 h-100">
            <h6 class="fw-bold text-danger">‚ùå @Model.Cancelled</h6>
            <small class="text-muted">ƒ∞ptal</small>
        </div>
    </div>
</div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i> Profil Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Kullanƒ±cƒ± Adƒ±</label>
                                <input asp-for="UserName" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">E-mail</label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Telefon</label>
                                <input asp-for="Phone" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Kayƒ±t Tarihi</label>
                                <input type="text" class="form-control" value="@Model.CreateTime.ToString("dd.MM.yyyy HH:mm")" readonly />
                            </div>
                        </div>

                        <!-- ≈ûifre G√ºncelle -->
                        <h6 class="text-primary mt-4"><i class="bi bi-lock-fill me-2"></i> ≈ûifre G√ºncelle</h6>
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Mevcut ≈ûifre" />
                            </div>
                            <div class="col-md-4 mb-2">
                                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni ≈ûifre" />
                            </div>
                            <div class="col-md-4 mb-2">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Yeni ≈ûifre Tekrar" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-x-circle"></i> Vazge√ß
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
       document.addEventListener("DOMContentLoaded", function () {
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
            Swal.fire({
                icon: 'success',
                title: 'Ba≈üarƒ±lƒ±',
                text: '@Html.Raw(TempData["SuccessMessage"])',
                confirmButtonText: 'Tamam'
            });
        </text>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <text>
            Swal.fire({
                icon: 'error',
                title: 'Hata',
                text: '@Html.Raw(TempData["ErrorMessage"])',
                confirmButtonText: 'Tamam'
            });
        </text>
    }
    else if (TempData["WarningMessage"] != null)
    {
        <text>
            Swal.fire({
                icon: 'info',
                title: 'Bilgi',
                text: '@Html.Raw(TempData["WarningMessage"])',
                confirmButtonText: 'Tamam'
            });
        </text>
    }
});
    </script>
}

