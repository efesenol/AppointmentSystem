@model List<BusinessViewModel>

<style>
    .fs-7 {
        font-size: 0.8rem;
    }

    .appointment-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }

    .appointment-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .date-box {
        background: linear-gradient(135deg, #4e73df, #224abe);
        color: #fff;
        border-radius: 8px;
        width: 70px;
        text-align: center;
        padding: 8px 0;
    }

    .date-box .day {
        font-size: 20px;
        font-weight: bold;
    }

    .date-box .month {
        font-size: 14px;
        text-transform: uppercase;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary mb-0">
            <i class="bi bi-house me-2"></i> İşletmelerim
        </h3>
        <a href="/yeni-basvuru" class="btn btn-primary">
            <i class="bi bi-building-add me-2"></i> Yeni İşletme Başvurusu
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <!-- İşletme yoksa uyarı -->
        <div class="alert alert-warning text-center p-5 rounded shadow-sm">
            <h4 class="mb-3"><i class="bi bi-exclamation-triangle me-2"></i> İşletmeniz bulunmamaktadır</h4>
            <a href="/yeni-basvuru" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle me-2"></i> Yeni İşletme Başvurusu İçin Tıklayın
            </a>
        </div>
    }
    else
    {
        <!-- İşletme varsa kart listesi -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 appointment-card h-100">
                        <div class="card-body d-flex flex-column">
                            <img src="@item.BusinessImg" 
                                 class="card-img-top mb-3" 
                                 alt="@item.BusinessName"
                                 style="height: 180px; object-fit: cover; border-radius: 8px;" />

                            <!-- İşletme Adı -->
                            <h5 class="fw-bold text-dark mb-2">
                                <i class="bi bi-building me-2 text-primary"></i>
                                @item.BusinessName
                            </h5>

                            <!-- Adres -->
                            <p class="mb-1">
                                <i class="bi bi-geo-alt-fill me-1 text-danger"></i>
                                <a href="https://www.google.com/maps/search/?api=1&query=@Uri.EscapeDataString(item.BusinessAdress!)"
                                   target="_blank" class="text-secondary text-decoration-none">
                                    @item.BusinessAdress
                                </a>
                            </p>

                            <!-- Açıklama -->
                            <p class="mb-3 text-muted small">
                                <i class="bi bi-info-circle me-1"></i>
                                @item.BusinessDescrption
                            </p>

                            <!-- Butonlar -->
                            <div class="mt-auto d-flex flex-column gap-2">
                                <a href="/isletme-bilgisi/@item.BusinessId" class="btn btn-primary w-100">
                                    <i class="bi bi-info-circle me-1"></i> İşletme Bilgileri
                                </a>
                                <a href="/isletme-randevular/@item.BusinessId" class="btn btn-dark w-100">
                                    <i class="bi bi-calendar-check me-1"></i> Gelen Randevular
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
