@model List<BusinessViewModel>

<style>
    .fs-7 { font-size: 0.8rem; }
    .appointment-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }
    .appointment-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }
    .date-box {
        background: linear-gradient(135deg, #4e73df, #224abe);
        color: #fff;
        border-radius: 8px;
        width: 70px;
        text-align: center;
        padding: 8px 0;
    }
    .date-box .day {
        font-size: 20px;
        font-weight: bold;
    }
    .date-box .month {
        font-size: 14px;
        text-transform: uppercase;
    }
</style>

<div class="container mt-5">
    <h3 class="mb-4 fw-bold text-primary"><i class="bi bi-calendar-check me-2"></i>Randevularım</h3>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 appointment-card h-100">
                    <div class="card-body d-flex flex-column">

                       

                        <!-- İşletme Adı -->
                        <h5 class="fw-bold text-dark mb-2">
                            <i class="bi bi-building me-2 text-primary"></i>
                            @item.BusinessName
                        </h5>

                        <!-- Adres -->
                        <p class="mb-1 text-secondary">
                            <i class="bi bi-geo-alt-fill me-1"></i>
                            @item.BusinessAdress
                        </p>

                        <!-- Açıklama -->
                        <p class="mb-2 text-muted small">
                            <i class="bi bi-info-circle me-1"></i>
                            @item.BusinessDescrption
                        </p>

                        <button class="btn btn-primary">Randevu al</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>