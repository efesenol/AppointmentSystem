@model List<UserAppointmentViewModel>

<style>
    .fs-7 { font-size: 0.8rem; }
    .appointment-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }
    .appointment-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }
    .date-box {
        background: linear-gradient(135deg, #4e73df, #224abe);
        color: #fff;
        border-radius: 8px;
        width: 70px;
        text-align: center;
        padding: 8px 0;
    }
    .date-box .day {
        font-size: 20px;
        font-weight: bold;
    }
    .date-box .month {
        font-size: 14px;
        text-transform: uppercase;
    }
</style>

<div class="container mt-5">
    <h3 class="mb-4 fw-bold text-primary"><i class="bi bi-calendar-check me-2"></i>Randevularım</h3>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-0 appointment-card h-100">
                    <div class="card-body d-flex flex-column">

                        <!-- Tarih - Saat -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="date-box">
                                <div class="day">@item.AppointmentDate.ToString("dd")</div>
                                <div class="month">@item.AppointmentDate.ToString("MMM")</div>
                                <div class="year">@item.AppointmentDate.ToString("yyyy")</div>
                            </div>
                            <div class="text-muted text-end fs-5">
                                <i class="bi bi-clock"></i>
                                @item.AppointmentDate.ToString("HH:mm")
                            </div>
                        </div>

                        <!-- İşletme Adı -->
                        <h5 class="fw-bold text-dark mb-2">
                            <i class="bi bi-building me-2 text-primary"></i>
                            @item.BusinessName
                        </h5>

                        <!-- Adres -->
                        <p class="mb-1 text-secondary">
                            <i class="bi bi-geo-alt-fill me-1"></i>
                            @item.BusinessAdress
                        </p>

                        <!-- Açıklama -->
                        <p class="mb-2 text-muted small">
                            <i class="bi bi-info-circle me-1"></i>
                            @item.BusinessDescrption
                        </p>

                        <!-- Durum -->
                        <div class="mb-3">
                            <span class="badge px-3 py-2 fs-7 rounded-pill 
                                @(item.StatusText == "İptal" ? "bg-danger" :
                                  item.StatusText == "Bekliyor" ? "bg-warning text-dark" :
                                  "bg-success")">
                                @item.StatusText
                            </span>
                        </div>

                        <!-- Aksiyonlar -->
                        <div class="mt-auto">
                            @if(item.AppointmentDate > DateTime.Now && item.StatusText == "Bekliyor") {
                                <a href="/Edit/@item.AppointmentId" class="btn btn-outline-primary w-100 mb-2">
                                    📌 Randevuya Git
                                </a>
                            }
                            else if(item.StatusText =="İptal" ) {
                                <span class="btn btn-danger w-100 mb-2" disabled style="pointer-events:none;">
                                    İptal Edilmiş Randevu
                                </span>
                            }
                             else if(item.StatusText =="Tamamlandı" ) {
                                <span class="btn btn-danger w-100 mb-2" disabled style="pointer-events:none;">
                                    Tamamlanan Randevu
                                </span>
                            }
                            else {
                                <span class="btn btn-danger w-100 mb-2" disabled style="pointer-events:none;">
                                    Geçmiş Randevu
                                </span>
                            }
                           
                            <button type="button" class="btn btn-sm btn-outline-danger w-100 btn-delete" data-id="@item.AppointmentId">
                                <i class="bi bi-trash me-1"></i> Sil
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const deleteButtons = document.querySelectorAll(".btn-delete");

        deleteButtons.forEach(btn => {
            btn.addEventListener("click", function () {
                const jobId = this.getAttribute("data-id");

                Swal.fire({
                    title: "Emin misiniz?",
                    text: "Bu kaydı silmek üzeresiniz!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Evet, sil!",
                    cancelButtonText: "İptal"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Delete/${jobId}`, {
                            method: "POST"
                        }).then(() => {
                            Swal.fire("Silindi!", "Kayıt başarıyla silindi.", "success")
                                .then(() => { location.reload(); });
                        });
                    }
                });
            });
        });
    });
</script>
