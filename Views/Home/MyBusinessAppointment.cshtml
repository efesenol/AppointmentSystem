@model List<AppointmentBusinessViewModel>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <!-- Card Header -->
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-calendar-check text-primary me-2"></i>
                    @Model.FirstOrDefault()?.BusinessName Randevuları
                </h4>
                <small class="text-muted">İşletmeye ait tüm randevuların listesi</small>
            </div>
            <span class="badge bg-primary fs-6">
                Toplam: @Model?.Count()
            </span>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%">#</th>
                        <th style="width:20%">Müşteri</th>
                        <th style="width:20%">Tarih</th>
                        <th style="width:25%">Not</th>
                        <th style="width:15%">Durum</th>
                        <th style="width:15%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    <i class="bi bi-person-circle text-primary me-1"></i>
                                    @item.CustomerName
                                </td>
                                <td>@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.Note</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case "Tamamlandı":
                                            <span class="badge bg-success w-100 py-2">
                                                <i class="bi bi-check-circle me-1"></i> Tamamlandı
                                            </span>;
                                            break;
                                        case "İptal":
                                            <span class="badge bg-danger w-100 py-2">
                                                <i class="bi bi-x-circle me-1"></i> İptal
                                            </span>;
                                            break;
                                        default:
                                            <span class="badge bg-warning text-dark w-100 py-2">
                                                <i class="bi bi-hourglass-split me-1"></i> Bekliyor
                                            </span>;
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="/randevu-detay/@item.AppointmentId"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="/randevu-sil/@item.AppointmentId"
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                Henüz randevu bulunmamaktadır.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
