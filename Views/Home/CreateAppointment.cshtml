@model NewAppointmentViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container mt-5">
    <!-- Sayfa Başlığı -->
    <div class="mb-4 text-center">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-calendar-plus me-2"></i> Yeni Randevu Al
        </h2>
        <p class="text-muted">
            Buradan yeni bir randevu oluşturabilir, tarih ve işletme seçebilirsiniz.
        </p>
    </div>

    <div class="row">
        <!-- Sol kısım: Form -->
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #4e73df, #224abe);">
                    <h5 class="mb-0 text-light">
                        <i class="bi bi-journal-plus me-2 text-light"></i> Randevu Bilgileri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="NewAppointment" method="post">
                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <label asp-for="UserName" class="form-label fw-semibold">
                                    <i class="bi bi-person-circle text-primary"></i> Randevu Alan Kişi
                                </label>
                                <input asp-for="UserName" class="form-control" readonly />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AppointmentDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event text-primary"></i> Randevu Tarihi
                                </label>
                                <input asp-for="AppointmentDate" class="form-control" type="datetime-local"
                                    asp-format="{0:yyyy-MM-ddTHH:mm}"
                                    min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                            </div>
                        </div>


                        <div class="mb-3">
                            <label asp-for="BusinessName" class="form-label fw-semibold">
                                <i class="bi bi-building text-primary"></i> İşletme
                            </label>
                            <input asp-for="BusinessName" class="form-control" readonly />
                            <input type="hidden" asp-for="BusinessId" /> <!-- backend'e id gitsin -->
                        </div>


                        <div class="mb-3">
                            <label asp-for="AppointmentNote" class="form-label fw-semibold">
                                <i class="bi bi-pencil text-primary"></i> Not (Opsiyonel)
                            </label>
                            <textarea asp-for="AppointmentNote" class="form-control" rows="3"
                                placeholder="Randevunuz için özel bir not bırakabilirsiniz..."></textarea>
                        </div>


                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-x-circle"></i> Vazgeç
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check2-circle"></i> Randevu Al
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-header bg-light">
                    <h6 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-info-circle me-2"></i> Randevu Kuralları
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-3">
                        - Randevular en erken bugünden itibaren alınabilir.<br />
                        - Aynı tarih ve saat için birden fazla randevu oluşturamazsınız.<br />
                        - İşletme seçimi zorunludur.<br />
                        - Özel not eklemek isteğe bağlıdır.
                    </p>

                    <div class="bg-light p-3 rounded text-center">
                        <i class="bi bi-calendar-plus fs-1 text-success"></i>
                        <p class="mt-2 mb-0 text-muted small">Bugünün tarihi:</p>
                        <p class="fw-bold">@DateTime.Now.ToString("dd MMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
