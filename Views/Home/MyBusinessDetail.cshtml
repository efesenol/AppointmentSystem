@model MyBusinessEditViewModel
@{
    ViewData["Title"] = "İşletme Güncelle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-pencil-square me-2 fs-5"></i>
                    <h5 class="mb-0">İşletme Güncelle</h5>
                </div>

                <div class="card-body p-4">
                    <form asp-route-id="@Model.BusinessId" asp-action="MyBusinessEdit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="BusinessId" />
                        <input type="hidden" asp-for="ImgUrl" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="BusinessName" class="form-label fw-semibold">
                                    <i class="bi bi-info-circle text-primary"></i> İşletme Adı
                                </label>
                                <input asp-for="BusinessName" class="form-control" />
                                <span asp-validation-for="BusinessName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BusinessEmail" class="form-label fw-semibold">
                                    <i class="bi bi-info-circle text-primary"></i> İşletme Maili
                                </label>
                                <input asp-for="BusinessEmail" class="form-control" />
                                <span asp-validation-for="BusinessEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BusinessTel" class="form-label fw-semibold">
                                    <i class="bi bi-info-circle text-primary"></i> İşletme Telefonu
                                </label>
                                <input asp-for="BusinessTel" class="form-control" />
                                <span asp-validation-for="BusinessTel" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BusinessAddress" class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt text-primary"></i> İşletme Adresi
                                </label>
                                <input asp-for="BusinessAddress" class="form-control" />
                                <span asp-validation-for="BusinessAddress" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-image text-primary"></i> Mevcut Görsel
                                </label>
                                <div class="border rounded p-2 bg-light text-center">
                                    <img id="currentPreview"
                                         src="@(string.IsNullOrWhiteSpace(Model.ImgUrl) ? "placeholder.jpg" : Model.ImgUrl)"
                                         class="img-fluid rounded shadow-sm"
                                         style="max-height:220px; object-fit:contain"
                                         alt="Mevcut işletme görseli"
                                         asp-append-version="true" />
                                </div>
                                <small class="text-muted d-block mt-1">Yeni bir görsel seçmezsen mevcut görsel korunur.</small>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImgFile" class="form-label fw-semibold">
                                    <i class="bi bi-upload text-primary"></i> Yeni Görsel Yükle (opsiyonel)
                                </label>
                                <input asp-for="ImgFile" type="file" accept="image/*" class="form-control" id="imgInput" />
                                <span asp-validation-for="ImgFile" class="text-danger"></span>

                                <div id="newPreviewWrap" class="mt-3 d-none">
                                    <div class="fw-semibold mb-2">Yeni Önizleme</div>
                                    <img id="newPreview" class="img-fluid rounded border shadow-sm" style="max-height:220px; object-fit:contain" alt="Yeni görsel önizleme" />
                                    <button type="button" class="btn btn-sm btn-outline-danger mt-2" id="clearNewImage">
                                        <i class="bi bi-x-circle"></i> Seçimi Temizle
                                    </button>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="BusinessDescrption" class="form-label fw-semibold">
                                    <i class="bi bi-pencil text-primary"></i> İşletme Açıklaması
                                </label>
                                <textarea asp-for="BusinessDescrption" rows="4" class="form-control"></textarea>
                                <span asp-validation-for="BusinessDescrption" class="text-danger"></span>
                            </div>

                            <div class="col-12 d-flex justify-content-end gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Vazgeç
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check2-circle"></i> Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const input = document.getElementById('imgInput');
        const newPreviewWrap = document.getElementById('newPreviewWrap');
        const newPreview = document.getElementById('newPreview');
        const clearBtn = document.getElementById('clearNewImage');

        input.addEventListener('change', (e) => {
            const file = e.target.files?.[0];
            if (!file) {
                newPreviewWrap.classList.add('d-none');
                newPreview.src = '';
                return;
            }
            const reader = new FileReader();
            reader.onload = (ev) => {
                newPreview.src = ev.target.result;
                newPreviewWrap.classList.remove('d-none');
            };
            reader.readAsDataURL(file);
        });

        clearBtn.addEventListener('click', () => {
            input.value = '';
            newPreview.src = '';
            newPreviewWrap.classList.add('d-none');
        });
    </script>
}
