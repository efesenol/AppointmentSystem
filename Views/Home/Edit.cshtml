@model AppointmentSystem.Models.EditAppointmentViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container mt-4">
    <h2>Randevu Düzenle</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="AppointmentId" />

        
        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Randevu Alan Kişi</label>
            <input asp-for="UserName" class="form-control" readonly />
        </div>

       
        <div class="mb-3">
            <label asp-for="AppointmentDate" class="form-label">Randevu Tarihi</label>
            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" /> 
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        
        <div class="mb-3">
            <label asp-for="BusinessId" class="form-label">İşletme</label>
            <select asp-for="BusinessId" asp-items="Model.Businesses" class="form-select"></select>
            <span asp-validation-for="BusinessId" class="text-danger"></span>
        </div>

        
        <div class="mb-3">
            <label asp-for="Status" class="form-label">Durum</label>
            <select asp-for="Status" class="form-select">
                @foreach (var status in Enum.GetValues(typeof(AppointmentSystem.Entities.AppointmentStatus)))
                {
                    <option value="@status" selected="@(status.Equals(Model.Status) ? "selected" : null)">
                        @status
                    </option>
                }
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
